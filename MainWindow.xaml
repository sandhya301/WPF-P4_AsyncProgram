<Window x:Class="P4_Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Processing" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" Background="WhiteSmoke">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Enter your order name:" FontWeight="Bold" FontSize="14"
                       HorizontalAlignment="Center" Foreground="DarkBlue"/>

            <TextBox x:Name="OrderName" Height="30" Width="250"
                         HorizontalAlignment="Center" FontSize="14" Padding="5"/>

            <Button x:Name="ProcessButton" Content="Process Order" Width="150" Height="35"
                        Margin="10" HorizontalAlignment="Center" Click="Button_Click"
                        Background="MediumBlue" Foreground="White" FontWeight="Bold"/>
            <Label x:Name="StatusLabel" Content="" FontSize="14" FontWeight="Bold" Foreground="Green" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
